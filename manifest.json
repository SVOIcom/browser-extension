{
  "manifest_version": 3,
  "version": "0.0.18",
  "name": "ScaleWallet",
  "homepage_url": "https://scalewallet.com",
  "description": "Everscale network wallet and dapps connectivity provider",
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "48": "icons/48.png",
    "64": "icons/128.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background-v3.mjs",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "browser-polyfill.js",
        "injector.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "browser-polyfill.js",
        "ton-client/main.js",
        "ton-client/tonclient.wasm",
        "ever-sdk-js/eversdk.wasm",
        "ever-sdk-js/main.js",
        "everscaleProvider.js",
        "modules/*",
        "packages/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html#popNewWindow",
    "default_title": "ScaleWallet",
    "default_icon": {}
  }
}